<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"
                android:right="@dimen/button_padding" android:top="@dimen/button_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/blue_80" />
                    <corners android:radius="@dimen/button_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"
                android:right="@dimen/button_padding" android:top="@dimen/button_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/grey_60" />
                    <corners android:radius="@dimen/button_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>